<script>

    var r,g,b;
    var ri,gi,bi;
    r = 125;
    g = 125;
    b = 125;
    ri = true;
    gi = true;
    bi = true;
    setInterval(function(){
        if (ri){
            r++;
            if (r>=255)
                ri=false;
        }else{
            r--;
            if(r<=125)
                ri = true;
        }
    },25);
    setInterval(function(){
        if (gi){
            g++;
            if (g>=255)
                gi=false;
        }else{
            g--;
            if(g<=125)
                gi = true;
        }
    },24);
    setInterval(function(){
        if (bi){
            b++;
            if (b>=255)
                bi=false;
        }else{
            b--;
            if(b<=125)
                bi = true;
        }
    },23);
    setInterval(function(){
        $("body").css("background-color","rgb("+r+","+g+","+b+")");
    },25);


</script>


<script type="text/javascript" src="http://www.google.com/jsapi"></script>

<script type="text/javascript">
//Script adapted from http://codes-sources.commentcamarche.net/source/48546-api-google-traduction
google.load("language", "1");

function Traduction(texteatraduire)
	{
        var languetraduite = 'fr';
        var languedorigine = 'en';

        google.language.translate(texteatraduire, languedorigine, languetraduite,
        function(result){
            if (!result.error){
                texteatraduire.append("\n\n"+result.translation);
                console.log("yeah");
            }
        });
	}

	$(".card-text").each(function(key, value){
	    Traduction($(this));
	});

</script>