{% extends "show/base.html.twig" %}

{% block pageHeading %}
    <h1>Bienvenue sur Showroom !</h1>
{% endblock %}

{% block content %}
    {% if error %}
        <div class="alert alert-danger" role="alert">
            {{ error.message }}
        </div>
    {% endif %}

<form action="{{ path('security_login_check') }}" method="POST">
    <label for="email">Email</label>
    <input type="text" name="email" class="form-control" value="{{ lastUsername }}"/>

    <label for="password">Password</label>
    <input type="password" name="password" class="form-control"/>

    <button type="submit" class="btm btn-primary">Connect</button>
</form>


{% endblock %}